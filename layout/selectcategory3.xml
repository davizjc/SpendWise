<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Category"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- "Require" Text -->
            <TextView
                android:id="@+id/require_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Required"
                android:textSize="20dp" />

            <!-- "Require" Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category - Food and Beverages -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_food"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/food_drinks" />

                    <Button
                        android:id="@+id/button_food"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="Food and Beverages"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <!-- Category - Transportation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_transportation"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/transport" />

                    <Button
                        android:id="@+id/button_transportation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="Transportation"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <!-- Category - Other Expenses -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_other_expenses"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/money" />

                    <Button
                        android:id="@+id/button_other_expenses"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="Other Expenses"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <!-- Category - Fitness -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_fitness"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/fitness" />

                    <Button
                        android:id="@+id/button_fitness"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="Fitness"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- "Fun and Relax" Text -->
            <TextView
                android:id="@+id/fun_and_relax_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fun and Relax"
                android:textSize="20dp" />

            <!-- "Fun and Relax" Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category - Streaming Service -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_streaming_service"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/entertainment" />

                    <Button
                        android:id="@+id/button_streaming_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="Streaming Service"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>

                <!-- Category - New Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_new_category"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.15"
                        app:srcCompat="@drawable/addtran" />

                    <Button
                        android:id="@+id/button_new_category"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:backgroundTint="@android:color/white"
                        android:gravity="start"
                        android:text="New Category"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />
</androidx.constraintlayout.widget.ConstraintLayout>
